@page "/"

<PageTitle>Blazing Trails</PageTitle>

@if (trails is null)
{
    <p>Loading trails...</p>
}
else
{
    <TrailDetails Trail="selectedTrail" />

    <TrailSearch />

    <div class="grid">
        @foreach (var trail in trails)
        {
            <TrailCard OnSelected="HandleTrailSelected" Trail="@trail" />
        }
    </div>
}